{
  "id": "{{service.name}}",

  "cpus": {{elasticsearch.scheduler.cpu}},
  "mem": {{elasticsearch.scheduler.ram}},
  "disk": {{elasticsearch.scheduler.disk}},
  "instances": {{elasticsearch.scheduler.instances}},

  "requirePorts": true,

  "ports": [
    {{elasticsearch.port}},
    {{elasticsearch.http-port}},
    {{elasticsearch.rpc-port}}
  ],

  "healthChecks": [
    {
      "path": "/",
      "portIndex": 0,
      "protocol": "HTTP",
      "gracePeriodSeconds": {{elasticsearch.scheduler.healthcheck-startdelay}},
      "intervalSeconds": {{elasticsearch.scheduler.healthcheck-interval}},
      "timeoutSeconds": {{elasticsearch.scheduler.healthcheck-timeout}},
      "maxConsecutiveFailures": {{elasticsearch.scheduler.healthcheck-maxfail}}
    }
  ],

  "cmd": "/tmp/start-scheduler.sh
  --zookeeperMesosUrl {{mesos.master}}
  --zookeeperMesosTimeout {{elasticsearch.zookeeper-mesos-timeout}}
  --frameworkName {{service.name}}
  --frameworkFailoverTimeout {{elasticsearch.failover-timeout}}
  --webUiPort $PORT0
  --executorName {{service.name}}
  --executorForcePullImage {{elasticsearch.force-pull-image}}
  --elasticsearchClusterName {{service.name}}
  --elasticsearchPorts $PORT1,$PORT2
  --elasticsearchNodes {{elasticsearch.executor.instances}}
  --elasticsearchCpu {{elasticsearch.executor.cpu}}
  --elasticsearchDisk {{elasticsearch.executor.disk}}
  --elasticsearchRam {{elasticsearch.executor.ram}}
  --externalVolumeDriver {{elasticsearch.executor.storage-driver}}",

  "env": {
    "JAVA_OPTS": "{{elasticsearch.scheduler.java-heap}}"
  },

  "container": {
    "type": "DOCKER",
    "docker": {
      "network": "HOST",
      "image": "{{resource.assets.container.docker.elasticsearch-scheduler}}",
      "forcePullImage": {{elasticsearch.force-pull-image}}
    }
  },

  "labels": {
    "DCOS_PACKAGE_FRAMEWORK_NAME": "{{service.name}}",
    "DCOS_PACKAGE_NAME": "{{service.name}}"
  }
}
