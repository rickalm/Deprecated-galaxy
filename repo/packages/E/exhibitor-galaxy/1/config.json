{
  "properties": {
    "service": {
      "type": "object",
      "additionalProperties": false,
      "description": "Service Properties",
      "properties": {
        "name": {
          "default": "exhibitor",
          "description": "Name of the Exhibitor task(s) in Marathon",
          "type": "string"
        }
      },
      "required": [
        "name"
      ]
    },
    "exhibitor": {
      "additionalProperties": false,
      "description": "Exhibitor specific configuration properties",
      "properties": {
        "cpus": {
          "description": "CPU shares to allocate to each Exhibitor instance.",
          "default": 0.5,
          "minimum": 0.1,
          "type": "number"
        },
        "disk": {
          "description": "Size of data volume (MiB) to allocate to each Exhibitor instance.",
          "default": 1024,
          "minimum": 1024,
          "type": "number"
        },
        "mem": {
          "description": "Memory (MiB) to allocate to each Exhibitor instance.",
          "default": 3072.0,
          "minimum": 1024.0,
          "type": "number"
        },
        "jvm_opts": {
          "description": "JVM opts for Exhibitor (Change if resized lower than 3G above)",
          "default": "-Xmx512m",
          "type": "string"
        },
        "http-port": {
          "description": "The port on which the exhibitor UI listens.",
          "default": 8181,
          "minimum": 1,
          "type": "integer"
        },
        "zk_servers": {
          "description": "Parent ZooKeeper URL for storing state. The framework name is joined to the path of this value. Format: zk://host1:port1,host2:port2,.../path",
          "default": "zk:/master.mesos:2181/",
          "type": "string"
        },
        "zookeeper": {
          "description": "ZooKeeper specific configuration properties",
          "properties": {
            "jvm_opts": {
              "description": "JVM opts for Exhibitor",
              "default": "-Xmx1G -Xms1G -XX:+PrintCommandLineFlags -XX:+PrintGC -XX:+PrintGCCause -XX:+PrintGCDetails -XX:+PrintGCTimeStamps -XX:+PrintGCDateStamps -XX:+PrintGCApplicationConcurrentTime -XX:+PrintGCApplicationStoppedTime -XX:+PrintTenuringDistribution -XX:+PrintAdaptiveSizePolicy -XX:+AlwaysPreTouch -Xss512k",
              "type": "string"
            },
            "client-port": {
              "description": "The port clients use to talk to the zookeeper cluster.",
              "default": 2121,
              "minimum": 1,
              "type": "integer"
            },
            "peer-port": {
              "description": "The port zookeeper peers talk with eachother on.",
              "default": 2888,
              "minimum": 1,
              "type": "integer"
            },
            "leader-port": {
              "description": "The port zookeeper peers talk to the leader on.",
              "default": 3888,
              "minimum": 1,
              "type": "integer"
            }
          },
          "required": [
            "jvm_opts",
            "client-port",
            "peer-port",
            "leader-port"
          ],
          "type":"object"
        }
      },
      "required": [
        "cpus",
        "disk",
        "mem",
        "http-port",
        "instances",
        "zk_servers",
        "jvm_opts"
      ],
      "type": "object"
    }
  },
  "type": "object"
}
